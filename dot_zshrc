# fi

# Compilation flags
# export ARCHFLAGS="-arch $(uname -m)"

# right prompt
RPS1='$(kubectx_prompt_info)'

# Setting for the new UTF-8 terminal support in Lion
export LC_CTYPE=en_US.UTF-8
export LC_ALL=en_US.UTF-8

export PATH="$PATH:/opt/homebrew/bin"

# setup ssh agent from gostore-agent
export PREV_SSH_AUTH_SOCK=$SSH_AUTH_SOCK
export SSH_AUTH_SOCK="$(brew --prefix)/var/run/gostore-agent.sock"

export EDITOR=vim

alias cat="bat"

# auto-discovery kubeconfigs
source ~/.kube/autodiscovery

export PATH="$HOME/go/bin:$PATH"
export PATH="$HOME/scripts:$PATH"

source <(gostore completion zsh)
source <(brewkit completion zsh)
source <(limactl completion zsh)

alias j=just
source <(just --completions zsh)

